{
  "name": "validation-utils",
  "version": "8.0.0",
  "description": "Validation utilities",
  "license": "MIT",
  "maintainers": [
    {
      "name": "Igor Savin",
      "email": "kibertoad@gmail.com"
    }
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --config=jest.config.json",
    "test:everything": "npm run lint && npm run test:coverage",
    "test:coverage": "jest --config=jest.config.json --coverage",
    "lint": "eslint --format codeframe \"lib/**/*.ts\" \"test/**/*.ts\"",
    "prettier": "prettier --write \"{lib,test}/**/*.{js,ts}\" index.ts",
    "prepublishOnly": "pinst --disable && npm run build",
    "postinstall": "husky install",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kibertoad/validation-utils.git"
  },
  "keywords": [
    "common",
    "utilities",
    "utils",
    "validation",
    "assertion",
    "validator",
    "validate",
    "assert",
    "null",
    "type",
    "nil",
    "empty"
  ],
  "homepage": "http://github.com/kibertoad/validation-utils",
  "dependencies": {
    "zoology": "^1.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@types/jest": "27.0.2",
    "@types/node": "^16.10.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^5.2.0",
    "jest": "27.2.4",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "typescript": "4.5.4",
    "ts-jest": "27.0.5"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist/*"
  ]
}
