{
  "name": "validation-utils",
  "version": "11.0.0",
  "description": "Validation utilities",
  "license": "MIT",
  "maintainers": [
    {
      "name": "Igor Savin",
      "email": "kibertoad@gmail.com"
    }
  ],
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build:dev": "tsc",
    "build:release": "tsup",
    "test": "vitest",
    "test:everything": "npm run lint && npm run test:coverage",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint index.ts lib test biome.json",
    "lint:fix": "biome check --write index.ts lib test biome.json",
    "prepublishOnly": "npm run build:release"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kibertoad/validation-utils.git"
  },
  "keywords": [
    "common",
    "utilities",
    "utils",
    "validation",
    "assertion",
    "validator",
    "validate",
    "assert",
    "null",
    "type",
    "nil",
    "empty"
  ],
  "homepage": "http://github.com/kibertoad/validation-utils",
  "dependencies": {
    "zoology": "^2.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@kibertoad/biome-config": "^1.2.1",
    "@types/node": "^20.16.10",
    "@vitest/coverage-v8": "^2.1.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist/*"
  ]
}
